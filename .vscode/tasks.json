{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "nim",
            "args": [
                "compile",
                "--out:${workspaceFolder}/bin/Engine",
                //"--run",
                "--define:debug",
                "--debugger:native",
                "--showAllMismatches:on",
                "${workspaceFolder}/src/main.nim"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
