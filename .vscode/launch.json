    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch: GDB (Native Debug)",
            "type": "gdb",
            "request": "launch",
            "preLaunchTask": "Build for debug",
            
            "target": "./bin/engine",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        {
            "name": "Launch: LLDB (CodeLLDB)",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Build for debug",

            "program": "${workspaceFolder}/bin/engine",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
